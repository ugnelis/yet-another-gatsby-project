{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/static/*": [
        "static/*"
      ],
      "*": [
        "src/*"
      ]
    },
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*",
    "./static/**/*",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./plugins/**/*",
    "./custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
